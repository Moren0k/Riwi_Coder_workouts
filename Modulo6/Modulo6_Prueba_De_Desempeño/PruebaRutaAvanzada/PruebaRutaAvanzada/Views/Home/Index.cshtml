@{
    ViewData["Title"] = "Hospital San Vicente";
}

<div class="container mt-5">
    <div class="text-center mb-4">
        <h1 class="display-4 fw-bold text-primary">Hospital San Vicente</h1>
        <p class="lead text-secondary">Sistema de Gestión de Citas Médicas</p>
    </div>

    <div class="d-flex justify-content-center">
        <div class="card shadow-lg border-0 p-4" style="max-width: 600px; width: 100%;">
            <div class="card-body text-center">
                
                <div class="d-grid gap-3">
                    <a class="btn btn-outline-primary btn-lg"
                       asp-action="Index"
                       asp-controller="Patient">
                        <i class="bi bi-people-fill"></i> Administrar Pacientes
                    </a>

                    <a class="btn btn-outline-primary btn-lg"
                       asp-action="Index"
                       asp-controller="Doctor">
                        <i class="bi bi-person-badge-fill"></i> Administrar Doctores
                    </a>

                    <a class="btn btn-outline-primary btn-lg"
                       asp-action="Index"
                       asp-controller="Appointment">
                        <i class="bi bi-calendar-check-fill"></i> Administrar Citas
                    </a>
                    
                    <a class="btn btn-outline-primary btn-lg"
                       asp-action="Index"
                       asp-controller="Email">
                        <i class="bi bi-calendar-check-fill"></i> Correos
                    </a>
                </div>
            </div>
        </div>
    </div>

    <footer class="text-center mt-5 text-muted small">
        <hr>
        <p>© @DateTime.Now.Year Hospital San Vicente | Desarrollado con ASP.NET Core MVC</p>
    </footer>
</div>